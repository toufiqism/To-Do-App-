<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="7dp"
            app:cardCornerRadius="10dp">

            <View
                android:id="@+id/notesPriority"
                android:layout_width="@dimen/recycler_item_shape"
                android:layout_height="@dimen/recycler_item_shape"
                android:layout_gravity="end"
                android:layout_margin="@dimen/recycler_item_lin_layout_margin"
                android:background="@drawable/green_shape" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/recycler_item_lin_layout_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/recycler_item_padding"
                    android:text="Title" />

                <TextView
                    android:id="@+id/notesSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/recycler_item_padding"
                    android:text="Subtitle" />

                <TextView
                    android:id="@+id/notesData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/recycler_item_padding"
                    android:text="Notes" />

                <TextView
                    android:id="@+id/notesDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/recycler_item_padding"
                    android:text="Date"
                    android:textColor="@color/black" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>